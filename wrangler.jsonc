{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "apis-mono",
  "main": "src/index.ts",
  "compatibility_date": "2025-09-27",
  "observability": {
    "enabled": true
  },
  "compatibility_flags": ["nodejs_compat"],
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "reports-db",
      "database_id": "32147a4b-a397-4642-b188-98aaa13d7a8b"
    }
  ],
  "r2_buckets": [
    {
      "binding": "REPORTS_BUCKET",
      "bucket_name": "reports-storage"
    }
  ],
  "vars": {
    "DOWNLOAD_SECRET": "deepseek"
  }
}
